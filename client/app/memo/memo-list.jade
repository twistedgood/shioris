div(ng-include="'components/navbar/navbar.html'")

.container(ng-controller="MemoListCtrl")

  a.btn.btn-primary(href, ui-sref="memo-edit") New

  h2 Me-Memo List

  ul.list-group
    li.list-group-item(ng-repeat="memo in memos")
      a(href, ui-sref="memo({id: memo._id})")
        {{memo.title}}
      a.trash(ng-click="deleteMemo(memo)")
        span.glyphicon.glyphicon-trash.pull-right
